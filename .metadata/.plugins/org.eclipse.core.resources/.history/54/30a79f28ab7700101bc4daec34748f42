package ptest;

import java.util.List;
import javax.faces.bean.ManagedBean;
import javax.faces.bean.ViewScoped;


//meu controlador
@ManagedBean
@ViewScoped
public class TarefaBean{
	private List<Responsavel> responsaveis;
	private List<Tarefa> tarefas;
	private Responsavel responsavel = new Responsavel();
	private FiltroTarefa filtro =new FiltroTarefa();
    private Tarefa tarefa = new Tarefa();
    private TarefaDAO dao = new TarefaDAO();

    public void salvarTarefa() {
        dao.salvarTarefa(filtro);
        tarefa = new Tarefa(); // limpa o formulÃ¡rio
        dao.salvarResponsavel(responsavel);
    	responsavel = new Responsavel();
    }

    
    public void buscarTarefas() {
        tarefas = TarefaService.filtrar(filtro); // Chama o serviÃ§o de consulta
    }
    public List<Tarefa> getTarefas() {
		return tarefas;
	}

	public void setTarefas(List<Tarefa> tarefas) {
		this.tarefas = tarefas;
	}

	public FiltroTarefa getFiltro() {
		return filtro;
	}

	public void setFiltro(FiltroTarefa filtro) {
		this.filtro = filtro;
	}

	public Tarefa getTarefa() {
		return tarefa;
	}
	
	public List<Responsavel> getResponsaveis() {
		return responsaveis;
	}

	public void setResponsaveis(List<Responsavel> responsaveis) {
		this.responsaveis = responsaveis;
	}

	public void setTarefa(Tarefa tarefa) {
		this.tarefa = tarefa;
	}

	public TarefaDAO getDao() {
		return dao;
	}

	public void setDao(TarefaDAO dao) {
		this.dao = dao;
	}

	public List<Tarefa> getPessoas() {
        return dao.listar();
    }

    public Tarefa getPessoa() {
        return tarefa;
    }

    public void setPessoa(Tarefa tarefa) {
        this.tarefa = tarefa;
    }


	public Responsavel getResponsavel() {
		return responsavel;
	}


	public void setResponsavel(Responsavel responsavel) {
		this.responsavel = responsavel;
	}
    
}
