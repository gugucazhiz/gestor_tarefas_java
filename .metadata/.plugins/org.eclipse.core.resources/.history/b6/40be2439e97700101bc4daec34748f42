package ptest;

import java.util.ArrayList;
import java.util.List;
import javax.faces.bean.ManagedBean;
import javax.faces.bean.ManagedProperty;
import javax.faces.bean.ViewScoped;
import javax.faces.component.html.HtmlInputTextarea;


import org.hibernate.hql.internal.ast.tree.TableReferenceNode;
import org.hibernate.service.spi.InjectService;


//meu controlador
@ManagedBean
@ViewScoped
public class TarefaBean{
	@ManagedProperty("#{tarefaService}")
	private TarefaService tarefaservice;
	@ManagedProperty("#{tarefaDAO}")
    private TarefaDAO dao;
	
	private Tarefa tarefa =new Tarefa();
	
	private List<Responsavel> responsaveis = new ArrayList<>();
	private List<Tarefa> tarefas= new ArrayList<>();
	private Responsavel responsavel = new Responsavel();
	private HtmlInputTextarea responsavelTextoEditar;
	private HtmlInputTextarea tituloTextoEditar;
	private HtmlInputTextarea numeroTextoEditar;
	private HtmlInputTextarea situacaoTextoEditar;
	
    public String salvarTarefa() {
    	dao.salvarResponsavel(responsavel);
    	tarefa.setResponsavel(responsavel);
        dao.salvarTarefa(tarefa);
        tarefa = new Tarefa(); // limpa o formulário
    	responsavel = new Responsavel();
    	return "";
    }
    public String editarTarefa(Tarefa editar){
    	responsavelTextoEditar.setValue(editar.getResponsavel());
    	numeroTextoEditar.setValue(editar.getNumero());
    	tituloTextoEditar.setValue(editar.getTitulo());
    	situacaoTextoEditar.setValue(editar.getSituacao());
		return "editar?faces-redirect=true";
    }
    
    public String excluirTarefa(Tarefa excluir){
		return "";
    }
    
    public String concluirTarefa(Tarefa concluir){
		return "";
    }

    
    public String buscarTarefas() {
        tarefas = tarefaservice.filtrar(tarefa); // Chama o serviço de consulta
        return "";
    }
    public List<Tarefa> getTarefas() {
		return tarefas;
	}

	public void setTarefas(List<Tarefa> tarefas) {
		this.tarefas = tarefas;
	}
	public Tarefa getTarefa() {
		return tarefa;
	}
	
	public List<Responsavel> getResponsaveis() {
		return responsaveis;
	}

	public void setResponsaveis(List<Responsavel> responsaveis) {
		this.responsaveis = responsaveis;
	}

	public void setTarefa(Tarefa tarefa) {
		this.tarefa = tarefa;
	}

	public TarefaDAO getDao() {
		return dao;
	}

	public void setDao(TarefaDAO dao) {
		this.dao = dao;
	}

	public Responsavel getResponsavel() {
		return responsavel;
	}


	public TarefaService getTarefaservice() {
		return tarefaservice;
	}


	public void setTarefaservice(TarefaService tarefaservice) {
		this.tarefaservice = tarefaservice;
	}


	public void setResponsavel(Responsavel responsavel) {
		this.responsavel = responsavel;
	}
	public HtmlInputTextarea getResponsavelTextoEditar() {
		return responsavelTextoEditar;
	}
	public void setResponsavelTextoEditar(HtmlInputTextarea responsavelTextoEditar) {
		this.responsavelTextoEditar = responsavelTextoEditar;
	}
	public HtmlInputTextarea getTituloTextoEditar() {
		return tituloTextoEditar;
	}
	public void setTituloTextoEditar(HtmlInputTextarea tituloTextoEditar) {
		this.tituloTextoEditar = tituloTextoEditar;
	}
	public HtmlInputTextarea getNumeroTextoEditar() {
		return numeroTextoEditar;
	}
	public void setNumeroTextoEditar(HtmlInputTextarea numeroTextoEditar) {
		this.numeroTextoEditar = numeroTextoEditar;
	}
	public HtmlInputTextarea getSituacaoTextoEditar() {
		return situacaoTextoEditar;
	}
	public void setSituacaoTextoEditar(HtmlInputTextarea situacaoTextoEditar) {
		this.situacaoTextoEditar = situacaoTextoEditar;
	}
	
	
    
}
