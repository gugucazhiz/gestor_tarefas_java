package ptest;

import java.util.List;
import javax.faces.bean.ManagedBean;
import javax.faces.bean.ViewScoped;

@ManagedBean
@ViewScoped
public class TarefaBean{
    private Tarefa pessoa = new Tarefa();
    private PessoaDao dao = new PessoaDao();

    public void salvar() {
        dao.salvar(pessoa);
        pessoa = new Tarefa(); // limpa o formulÃ¡rio
    }

    public List<Tarefa> getPessoas() {
        return dao.listar();
    }

    public Tarefa getPessoa() {
        return pessoa;
    }

    public void setPessoa(Tarefa pessoa) {
        this.pessoa = pessoa;
    }
}
